<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#1A1C1E"
    tools:ignore="Overdraw">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/the_haptic_ptsd_project"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_title"
            android:text="@string/detection_active"
            android:textColor="#CCCCCC"
            android:textSize="11sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/visualizer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/img_phone_left"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/phone_left_on"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/phone_left_haptic_indicator" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/img_controller_left_top"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/controller_left_on"
                android:contentDescription="@string/left_controller_top_haptic_indicator" />
            <ImageView
                android:id="@+id/img_controller_left_bottom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/controller_left_on"
                android:contentDescription="@string/left_controller_bottom_haptic_indicator" />
        </LinearLayout>

        <!-- Audio Visualizer Area -->
        <FrameLayout
            android:id="@+id/audio_visualizer_root"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginHorizontal="4dp">

            <!-- Vertical Bars (Using ProgressBars with vertical orientation) -->
            <LinearLayout
                android:id="@+id/layout_bars"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:visibility="visible">
                <!-- We'll use scaling for these views or just stick to ProgressBars if we can find vertical style -->
                <!-- Simple way: Vertical progress bars via rotation or custom style is hard in RemoteViews. -->
                <!-- Let's use 8 ProgressBars with a vertical progress drawable if possible, or just height updates for API 31+ -->
                <ProgressBar android:id="@+id/bar1" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:progressDrawable="@android:drawable/progress_horizontal" android:rotation="270" android:max="100"/>
                <ProgressBar android:id="@+id/bar2" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:progressDrawable="@android:drawable/progress_horizontal" android:rotation="270" android:max="100"/>
                <ProgressBar android:id="@+id/bar3" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:progressDrawable="@android:drawable/progress_horizontal" android:rotation="270" android:max="100"/>
                <ProgressBar android:id="@+id/bar4" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:progressDrawable="@android:drawable/progress_horizontal" android:rotation="270" android:max="100"/>
                <ProgressBar android:id="@+id/bar5" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:progressDrawable="@android:drawable/progress_horizontal" android:rotation="270" android:max="100"/>
                <ProgressBar android:id="@+id/bar6" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:progressDrawable="@android:drawable/progress_horizontal" android:rotation="270" android:max="100"/>
                <ProgressBar android:id="@+id/bar7" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:progressDrawable="@android:drawable/progress_horizontal" android:rotation="270" android:max="100"/>
                <ProgressBar android:id="@+id/bar8" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:progressDrawable="@android:drawable/progress_horizontal" android:rotation="270" android:max="100"/>
            </LinearLayout>

            <!-- Channel Intensity Bars -->
            <LinearLayout
                android:id="@+id/layout_intensity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"
                        android:text="@string/l"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp"
                        tools:ignore="SmallSp" />
                    <ProgressBar android:id="@+id/progress_left" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="6dp" android:progressDrawable="@android:drawable/progress_horizontal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"
                        android:text="@string/r"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp"
                        tools:ignore="SmallSp" />
                    <ProgressBar android:id="@+id/progress_right" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="6dp" android:progressDrawable="@android:drawable/progress_horizontal" />
                </LinearLayout>
            </LinearLayout>

            <!-- Waveform (using progress bars but arranged differently or just a single line) -->
            <RelativeLayout
                android:id="@+id/layout_waveform"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/waveform_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#2196F3"
                    android:contentDescription="@string/waveform_visualizer" />
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">
            <ImageView
                android:id="@+id/img_controller_right_top"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/controller_right_on"
                android:contentDescription="@string/right_controller_top_haptic_indicator" />
            <ImageView
                android:id="@+id/img_controller_right_bottom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/controller_right_on"
                android:contentDescription="@string/right_controller_bottom_haptic_indicator" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_phone_right"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/phone_right_on"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/phone_right_haptic_indicator" />
    </LinearLayout>

    <!-- BBPlayer Controls -->
    <LinearLayout
        android:id="@+id/player_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/player_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="2dp"
            android:progressDrawable="@android:drawable/progress_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_replay_30"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_media_rew"
                android:padding="4dp"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/replay_30_seconds" />

            <ImageView
                android:id="@+id/btn_replay_5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_media_previous"
                android:padding="4dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/replay_5_seconds" />

            <ImageView
                android:id="@+id/btn_play_pause"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_media_play"
                android:padding="4dp"
                android:contentDescription="@string/play_or_pause" />

            <ImageView
                android:id="@+id/btn_stop"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:padding="4dp"
                android:contentDescription="@string/stop" />

            <ImageView
                android:id="@+id/btn_forward_5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_media_next"
                android:padding="4dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/forward_5_seconds" />

            <ImageView
                android:id="@+id/btn_forward_30"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_media_ff"
                android:padding="4dp"
                android:layout_marginStart="6dp"
                android:contentDescription="@string/forward_30_seconds" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
